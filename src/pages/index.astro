---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Amir pages.">
	<div class="container mx-auto p-6 mt-10">
		<div class="rounded-lg bg-black text-white p-8">
			<p class="instructions">
				This is Amir Abbas's Personal website. Welcome to Website.
			</p>
		</div>
	</div>

	<div class="container mx-auto p-6 mt-0">
		<div class="grid gap-2 lg:grid-cols-4 md:grid-cols-2 sm:grid-cols-1">
			<Card href="/games/" title="Games !!!" body="I put games here." />
			<Card href="/music/" title="Music" body="I put music here." />
			<Card
				href="/background/"
				title="Background"
				body="I put backgrounds here."
			/>
			<Card href="/clip/" title="Clip" body="I put clip and movie. ❤️" />
		</div>
	</div>

	<div class="container mx-auto mt-10 px-4">
		<div class="flex flex-col md:flex-row items-center bg-white">
			<div class="bg-white p-6 text-center w-full md:w-1/3 h-full">
				<h2 class="text-3xl font-thin">See the backgrounds</h2>
				<p class="mt-6 text-gray-600 font-thin">
					Different and beautiful backgrounds.
				</p>

				<a
					href="/background/"
					class="mt-10 block mx-auto rounded text-white transition duration-500 ease-in-out bg-teal-500 hover:bg-red-500 transform hover:-translate-y-1 hover:scale-110 px-4 py-2"
				>
					To the backgrounds
				</a>
			</div>
			<div class="bg-white p-6 text-center w-full md:w-2/3 h-full">
				<div class="w-full items-center flex justify-between"></div>
			</div>
		</div>
	</div>
</Layout>
